<!-- modules.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Modules</title>
</head>
<body>
    <h1>Modules</h1>
    <ul>
        <% modules.forEach(module => { %>
            <li>
                <h2><%= module.module_name %></h2>
                <p><%= module.description %></p>
                <a href="/modules/<%= module.module_id %>/materials">View Materials</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
