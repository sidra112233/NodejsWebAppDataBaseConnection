<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Results</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            text-align: center;
            padding: 50px;
            margin: 0;
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
        }

        .container {
            max-width: 600px;
            padding: 30px;
            border-radius: 12px;
            background: linear-gradient(135deg, #e1f5fe, #f1f8e9, #bbdefb);
            box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 0.8s ease forwards, popUp 0.6s ease forwards;
            transform: translateY(50px);
            opacity: 0;
        }

        @keyframes fadeInUp {
            0% { opacity: 0; transform: translateY(50px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        @keyframes popUp {
            0% { transform: scale(0.9); }
            100% { transform: scale(1); }
        }

        h1 {
            color: #1565c0;
            font-size: 2.8em;
            margin-bottom: 15px;
        }

        p {
            font-size: 1.3em;
            color: #546e7a;
            margin-bottom: 10px;
        }

        .score {
            font-size: 3em;
            font-weight: bold;
            color: #42a5f5;
            margin-bottom: 30px;
            transition: transform 0.3s ease;
        }

        .score:hover {
            transform: scale(1.1);
        }

        h3 {
            font-size: 1.5em;
            color: #0288d1;
            margin-bottom: 20px;
        }

        /* Circular Progress Bar */
        .progress-container {
            margin-bottom: 20px;
            position: relative;
            display: inline-block;
        }

        .circular-progress {
            width: 150px;
            height: 150px;
            background: conic-gradient(#0288d1 <%= progress %>%, #e0e0e0 <%= progress %>%);
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .circular-progress p {
            font-size: 1.8em;
            color: #0288d1;
        }

        /* Button Style */
        .back-btn {
            display: inline-block;
            padding: 14px 40px;
            background: linear-gradient(45deg, #1e88e5, #1565c0);
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1.3em;
            transition: background-color 0.3s ease, transform 0.3s ease;
            cursor: pointer;
        }

        .back-btn:hover {
            background-color: #0d47a1;
            transform: scale(1.1);
        }

        /* Confetti Canvas */
        .confetti {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 9999;
        }
    </style>
</head>
<body>

    <canvas id="confetti" class="confetti"></canvas>

    <div class="container">
        <h1>Quiz Completed!</h1>
        <p>Your total score is:</p>
        <p class="score"><%= totalScore %> / 100</p>

        <!-- Circular progress bar -->
        <div class="progress-container">
            <div class="circular-progress">
                <p><%= progress %>%</p>
            </div>
        </div>

        <h3>Your Progress: <%= progress %>%</h3>
        <button class="back-btn" onclick="goBack()">Back</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
    <script>
        function goBack() {
            window.location.href = '/dashboard';
        }

        // Confetti animation
        window.onload = function() {
            const myConfetti = confetti.create(document.getElementById('confetti'), {
                resize: true,
                useWorker: true,
            });

            // Confetti burst effect in stages
            myConfetti({
                particleCount: 100,
                spread: 60,
                origin: { y: 0.6 }
            });

            setTimeout(() => {
                myConfetti({
                    particleCount: 150,
                    spread: 90,
                    origin: { y: 0.4 }
                });
            }, 500);

            setTimeout(() => {
                myConfetti({
                    particleCount: 200,
                    spread: 120,
                    origin: { y: 0.2 }
                });
            }, 1000);
        }
    </script>

</body>
</html>
