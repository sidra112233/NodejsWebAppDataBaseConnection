<body>
<!-- _navbar.ejs -->
<header class="small-header-bar">
        <a href="/dashboard">Home</a>
      </header>
<nav class="navbar">
    <div class="navbar-left">
        <img src="/images/Logo.png" alt="Logo" class="logo">
        <span class="site-name">LEARN CODE PRO</span>
    </div>
    <div class="navbar-right">
        <a href="/" class="button home-btn">Home</a>
        <% if (student) { %>
            <a href="/profile" class="button profile-btn"><%= student.student_name %></a>
            <a href="/sign-out" class="button sign-out-btn">Sign-Out</a>
        <% } else { %>
            <a href="/register">Register</a>
        <% } %>
    </div>
</nav>

<div id="dashboard" class="container">
    <h1 class="course-header">Welcome, <%= student.student_name %>!</h1>

    <% if (enrolledCourses && enrolledCourses.length > 0) { %>
        <% enrolledCourses.forEach(course => { %>
            <div>
                <h2 class="course-header"><%= course.course_name %> (Aligned with <%= course.alignment %>)</h2>
                <div class="module-container">
                    <% if (modulesByCourse[course.course_id]) { %>
                        <% modulesByCourse[course.course_id].forEach(module => { %>
                            <div class="module" onclick="showModuleInSidebar('<%= course.course_name %>', <%= JSON.stringify(modulesByCourse[course.course_id]) %>, <%= module.module_id %>)">
                                <h4><%= module.module_name %></h4>
                                <% if (module.quiz_id) { %>
                                    <form action="/quiz/start" method="post">
                                        <input type="hidden" name="quiz_id" value="<%= module.quiz_id %>">
                                        <button type="submit">Start Quiz</button>
                                    </form>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No modules available for this course.</p>
                    <% } %>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <h2>Available Courses</h2>
        <% if (courses && courses.length > 0) { %>
            <div class="course-cards">
                <% courses.forEach(course => { %>
                    <div class="card">
                        <h3><%= course.course_name %></h3>
                        <p><%= course.description %></p>
                        <button onclick="showEnrollForm(<%= course.course_id %>)">Enroll</button>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>No courses available.</p>
        <% } %>
    <% } %>
</div>

<div id="sidebar" class="sidebar">
    <h2 id="sidebar-course-name"></h2>
    <div id="sidebar-modules"></div>
</div>

<div id="details-container" class="details-container hidden">
    <h2 id="module-details-title"></h2>
    <div id="module-details-content"></div>
    <button id="toggle-compiler" onclick="toggleCompiler()">Open Compiler</button>

</div>
<div id="compiler-container" class="compiler-container hidden">
    <button class="close-button" onclick="toggleCompiler()">&times;</button>
    <form id="compiler-form"> <!-- Add an id to the form -->
        <div class="compiler-content">
            <div class="code-input">
                <label for="code"></label><br>
                <textarea name="code" id="code" rows="10" cols="50" placeholder="Enter your code here..."></textarea><br><br>
            </div>
            <div class="input-section">
                <label for="input">Input (Optional):</label><br>
                <textarea name="input" id="input" rows="5" cols="50" placeholder="Enter input (optional)"></textarea><br><br>
            </div>
            <select name="lang" id="lang">
                <option value="C">C</option>
                <option value="C++">C++</option>
                <option value="Python">Python</option>
            </select>
        </div>
        <div class="compiler-actions">
            <button type="submit">Compile</button>
            <button class="reset-button" onclick="resetCompiler()">Reset</button>
        </div>
    </form>
    <div id="compiler-output" class="compiler-output"></div> <!-- Output container -->
</div>
<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        console.log('DOM fully loaded and parsed');
    });

    function showEnrollForm(courseId) {
        console.log('Showing enroll form');
        window.location.href = `/enroll?course_id=${courseId}`;
    }

    function showModuleInSidebar(courseName, modules, selectedModuleId) {
        console.log('Showing module in sidebar', courseName, modules, selectedModuleId);

        document.getElementById('dashboard').classList.add('hidden');
        const sidebar = document.getElementById('sidebar');
        sidebar.style.display = 'flex';
        document.getElementById('sidebar-course-name').innerText = courseName;
        
        const sidebarModules = document.getElementById('sidebar-modules');
        sidebarModules.innerHTML = '';
        modules.forEach(module => {
            sidebarModules.innerHTML += `
                <div class="module ${module.module_id === selectedModuleId ? 'selected' : ''}" onclick="showModuleDetails(${module.module_id}, '${module.module_name}')">
                    <h4>${module.module_name}</h4>
\                    <p> ${module.quiz_score ? module.quiz_score + '%' : ''}</p>
                </div>
            `;
        });

        showModuleDetails(selectedModuleId, modules.find(m => m.module_id === selectedModuleId).module_name);
    }
    function showModuleDetails(moduleId, moduleName) {
    console.log('Showing module details', moduleId, moduleName);
    fetch(`/module-details/${moduleId}`)
        .then(response => response.json())
        .then(data => {
            console.log('Fetched module details:', data);

            document.getElementById('details-container').classList.remove('hidden');

            document.getElementById('module-details-title').innerText = moduleName;
            const moduleDetailsContent = document.getElementById('module-details-content');
            moduleDetailsContent.innerHTML = '';

            // Display materials
            moduleDetailsContent.innerHTML += `<h3 class="module-details-heading">Materials</h3>`;
            data.materials.forEach(material => {
                moduleDetailsContent.innerHTML += `
                    <div class="material">
                        <h4>${material.title}</h4>
                        <p>Type: ${material.type}</p>
                        <p>Description: ${material.description}</p>
                        <a href="${material.link}" target="_blank">Link</a>
                    </div>
                `;
            });

            // Display examples
            moduleDetailsContent.innerHTML += `<h3 class="module-details-heading">Examples</h3>`;
            if (data.examples && data.examples.length > 0) {
                data.examples.forEach(example => {
                    moduleDetailsContent.innerHTML += `
                        <div class="example">
                            <h4>${example.language}</h4>
                            <pre><code>${escapeHtml(example.code_snippet)}</code></pre>
                        </div>
                    `;
                });
            } else {
                moduleDetailsContent.innerHTML += `<p>No examples available for this module.</p>`;
            }
           // Display exercise
moduleDetailsContent.innerHTML += `<h3 class="module-details-heading">Exercises</h3>`;
if (data.exercises && data.exercises.length > 0) {
    data.exercises.forEach(exercise => {
        moduleDetailsContent.innerHTML += `
            <div class="exercise">
                <a href="/exercises/${exercise.exercise_id}" class="exercise-link">Go to Exercise</a>
            </div>
        `;
    });
} else {
    moduleDetailsContent.innerHTML += `<p>No exercises available for this module.</p>`;
}


            // Display quizzes
            moduleDetailsContent.innerHTML += `<h3 class="module-details-heading">Quizzes</h3>`;
            if (data.quizzes && data.quizzes.length > 0) {
                data.quizzes.forEach(quiz => {
                    moduleDetailsContent.innerHTML += `
                        <div class="quiz">
                            <h4>${quiz.quiz_title}</h4>
                            <p>Total Marks: ${quiz.total_marks}</p>
                            <a href="/quiz/start/${quiz.quiz_id}">${quiz.quiz_title}</a>

                        </div>
                    `;
                });
            } else {
                moduleDetailsContent.innerHTML += `<p>No quizzes available for this module.</p>`;
            }

            document.getElementById('compiler-container').classList.remove('hidden');
        })
        .catch(error => {
            console.error('Error fetching module details:', error);
        });
}
// Function to escape HTML special characters to prevent injection attacks
function escapeHtml(pre) {
    return pre
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;")
        .replace(/'/g, "&#039;");
}

   function toggleCompiler() {
    const compilerContainer = document.getElementById('compiler-container');
    if (compilerContainer) {
        // Toggle between hidden and visible classes
        compilerContainer.classList.toggle('hidden');
        compilerContainer.classList.toggle('visible');
    } else {
        console.error('Compiler container not found.');
    }
}
function resetCompiler() {
    document.getElementById('code').value = ''; // Clear the code textarea
    document.getElementById('input').value = ''; // Clear the input textarea
    document.getElementById('compiler-output').innerText = ''; // Clear the output display
}
document.getElementById('compiler-form').addEventListener('submit', function(e) {
    e.preventDefault(); // Prevent form submission

    const code = document.getElementById('code').value;
    const input = document.getElementById('input').value;
    const lang = document.getElementById('lang').value;
    const inputRadio = document.getElementById('inputRadio').checked;

    fetch('/compilecode', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            code: code,
            input: input,
            inputRadio: inputRadio,
            lang: lang
        })
    })
    .then(response => response.json())
    .then(data => {
        const outputElement = document.getElementById('compiler-output');
        if (data.error) {
            outputElement.innerText = "Error: " + data.error;
            outputElement.style.color = "red";
        } else {
            outputElement.innerText = data.output;
            outputElement.style.color = "green";
        }
    })
    .catch(error => console.error('Error:', error));
});


    function showDashboard() {
        document.getElementById('details-container').classList.add('hidden');
        document.getElementById('dashboard').classList.remove('hidden');
        document.getElementById('sidebar').style.display = 'none';
        document.getElementById('compiler-container').classList.add('hidden');
    }
    document.getElementById('home-button').addEventListener('click', function() {
    const dashboard = document.getElementById('dashboard');
    dashboard.classList.toggle('hidden');
});
</script>
