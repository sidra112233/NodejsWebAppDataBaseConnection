<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <!-- Include the updated CSS here -->
    /* Combined and corrected CSS */
    <style> /* Include the updated CSS here */
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #001f3f;
            color: #ffffff;
        }

        .navbar {
            background-color: #333;
            overflow: hidden;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            height: 30px; /* Adjust to your navbar's height */
        }

        .navbar-left {
            display: flex;
            align-items: center;
        }

        .logo {
            height: 40px;
            margin-right: 10px;
        }

        .site-name {
            color: white;
            font-size: 1.5em;
        }

        .navbar-right a {
            color: white;
            padding: 14px 20px;
            text-decoration: none;
            text-align: center;
        }

        .navbar-right a:hover {
            background-color: gray;
        }

        @media screen and (max-width: 500px) {
            .navbar a {
                float: none;
                display: block;
            }
        }

        .register-btn, .profile-btn, .logout-btn {
            border: 1px solid white;
            border-radius: 5px;
            margin-right: 30px;

        }

        .container {
            margin-top: 70px; /* Match this value to the height of your navbar */
            padding: 40px;
            color: #ffffff;
            overflow-y: auto;
            height: calc(100vh - 70px); /* Adjust height accordingly */
            width: calc(100% - 220px);
            box-sizing: border-box;
        }

        .course-header {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.8em;
            font-weight: bold;
            color: #ffd700;
        }

        .module-container {
            display: flex;
            flex-direction: row;
            border: 1px solid #444;
            border-radius: 5px;
            padding: 20px;
            margin: 10px 0;
            background-color: #002b5f;
            width: 100%;
            box-sizing: border-box;
        }

        .details-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .details-container h2#module-details-title {
            font-size: 1.5em;
            color: #ffd700;
            margin: 20px 0;
            text-align: center;
        }

        .module {
            text-align: center;
            padding: 10px;
            border-bottom: 1px solid #555;
            cursor: pointer;
            background-color: #003366;
            margin-bottom: 10px;
            border-radius: 5px;
        }

        .module h4 {
            margin-bottom: 5px;
            font-size: 1.2em;
            color: #ffd700;
        }

        .module p {
            margin: 3px 0;
            font-size: 0.9em;
        }

        .hidden {
            display: none;
        }

        .module:last-child {
            border-bottom: none;
        }

        .course-cards {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .card {
            border: 1px solid #444;
            border-radius: 10px;
            padding: 20px;
            margin: 10px;
            width: calc(33.333% - 20px);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            text-align: center;
            background-color: #003366;
            color: #ffffff;
        }

        .card h3 {
            margin-top: 0;
            font-size: 1.5em;
            color: #ffd700;
        }

        .card button {
            background-color: #ffd700;
            color: #003366;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 1em;
        }

        .card button:hover {
            background-color: #ffc107;
        }

        .sidebar {
            width: 200px;
            height: 100vh;
            position: fixed;
            top: 0;
            bottom: 0;
            background-color: #003366;
            color: #ffffff;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
            overflow-y: auto;
            display: none;
            flex-direction: column;
            font-size: 1em;
        }

        .sidebar h2 {
            margin-top: 0;
            font-size: 1.5em;
            color: #ffd700;
        }

        .sidebar .module {
            border: none;
            border-bottom: 1px solid #444;
            padding: 10px 0;
            cursor: pointer;
            background-color: transparent;
        }

        .sidebar .module h4 {
            margin: 0;
            font-size: 1.2em;
            color: #ffd700;
        }

        .sidebar .module:last-child {
            border-bottom: none;
        }

        .compiler-container {
            width: 400px;
            max-width: 100%;
            position: fixed;
            right: 0;
            top: 0;
            height: 100%;
            overflow-y: auto;
            box-shadow: 2px 0 15px rgba(0, 0, 0, 0.5);
            color: #ffffff;
            background-color: #002b5f;
            padding: 30px;
            display: none;
            top: 50px;
            box-sizing: border-box;
        }

        .compiler-container h1 {
            font-size: 1.5em;
            color: #ffd700;
            margin-bottom: 20px;
            position: relative;
        }

        .compiler-container textarea#code, .compiler-container textarea#input {
            width: 100%;
            border-radius: 5px;
            padding: 10px;
            font-family: 'Courier New', Courier, monospace;
            border: 1px solid #ccc;
            resize: vertical;
        }

        .compiler-container textarea#code {
            height: 200px;
            background-color: #ffffff;
            color: #000000;

        }

        .compiler-container textarea#input {
            height: 80px;
            background-color: #ffffff;
            color: #000000;
        }

        .compiler-container select {
            margin: 10px 0;
            width: 100%;
            text-align: center;
        }

        .compiler-container button {
            background-color: #ffd700;
            color: #003366;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 1em;
            position: absolute;
            top: 10px;
            right: 20px;
        }

        .compiler-container button:hover {
            background-color: #ffc107;
        }

        textarea::placeholder {
            color: #888;
            font-style: italic;
        }
         .compiler-container.hidden {
            display: none;
        }
        .compiler-container.visible {
            display: block;
        }
         .compiler-header {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 20px; /* Space between dropdown and rest of the content */
        }
        #lang {
            margin-left: 10px; /* Space between label and dropdown */
        }
        .close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #ff4d4d;
            color: white;
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            font-size: 16px;
        }
        .reset-button {
            background-color: #ff4d4d;
            margin-right: 110px;
        }
        .reset-button:hover {
            background-color: #e03e3e;
        }
        .material-and-quizzes {
            background-color: #ffffff;
            border: 1px solid #444;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            margin-left: 220px;
        }

        .material {
            margin-bottom: 50px;
            margin-left: 220px;
        }

        .material h4, .quiz h4 {
            font-size: 1.2em;
            color: #ffd700;
        }

        .quiz {
            margin-bottom: 50px;
            margin-left: 220px;
        }

        #toggle-compiler {
            position: fixed;
            top: 50px;
            left: 250px;
            background-color: #ffd700;
            color: #003366;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 1em;
            z-index: 1001;
        }

        #toggle-compiler:hover {
            background-color: #ffc107;
        }
</style>
</head>
<body>
<!-- _navbar.ejs -->
<nav class="navbar">
    <div class="navbar-left">
        <img src="/path/to/logo.png" alt="Logo" class="logo">
        <span class="site-name">LEARN CODE PRO</span>
    </div>
    <div class="navbar-right">
        <a href="/">Home</a>
        <% if (student) { %>
            <a href="/profile" class="button profile-btn"><%= student.student_name %></a>
            <a href="/logout" class="button logout-btn">Logout</a>
        <% } else { %>
            <a href="/register">Register</a>
        <% } %>
    </div>
</nav>

<div id="dashboard" class="container">
    <h1 class="course-header">Welcome, <%= student.student_name %>!</h1>

    <% if (enrolledCourses && enrolledCourses.length > 0) { %>
        <% enrolledCourses.forEach(course => { %>
            <div>
                <h2 class="course-header"><%= course.course_name %> (Aligned with <%= course.alignment %>)</h2>
                <div class="module-container">
                    <% if (modulesByCourse[course.course_id]) { %>
                        <% modulesByCourse[course.course_id].forEach(module => { %>
                            <div class="module" onclick="showModuleInSidebar('<%= course.course_name %>', <%= JSON.stringify(modulesByCourse[course.course_id]) %>, <%= module.module_id %>)">
                                <h4><%= module.module_name %></h4>
                                <p>Study Resources</p>
                                <p>Quiz: <%= module.quiz_score ? module.quiz_score + '%' : '-' %></p>
                                <p>Test: <%= module.test_score ? module.test_score + '%' : '-' %></p>
                                <% if (module.quiz_id) { %>
                                    <form action="/quiz/start" method="post">
                                        <input type="hidden" name="quiz_id" value="<%= module.quiz_id %>">
                                        <button type="submit">Start Quiz</button>
                                    </form>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No modules available for this course.</p>
                    <% } %>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <h2>Available Courses</h2>
        <% if (courses && courses.length > 0) { %>
            <div class="course-cards">
                <% courses.forEach(course => { %>
                    <div class="card">
                        <h3><%= course.course_name %></h3>
                        <p><%= course.description %></p>
                        <button onclick="showEnrollForm(<%= course.course_id %>)">Enroll</button>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>No courses available.</p>
        <% } %>
    <% } %>
</div>

<div id="sidebar" class="sidebar">
    <h2 id="sidebar-course-name"></h2>
    <div id="sidebar-modules"></div>
</div>

<div id="details-container" class="details-container hidden">
    <h2 id="module-details-title"></h2>
    <div id="module-details-content"></div>
    <button id="toggle-compiler" onclick="toggleCompiler()">Open Compiler</button>

</div>


<div id="compiler-container" class="compiler-container hidden">
    <form action="/compilecode" method="POST">
        <label for="code"></label><br>
        <textarea name="code" id="code" rows="10" cols="50" placeholder="Enter your code here..."></textarea><br><br>
        
        <label for="input">Input (Optional):</label><br>
        <textarea name="input" id="input" rows="5" cols="50" placeholder="Enter input (optional)"></textarea><br><br>
                <div class="compiler-header">
        <label for="lang">Select Language:</label>
        <select name="lang" id="lang">
            <option value="C">C</option>
            <option value="C++">C++</option>
            <option value="Python">Python</option>
        </select><br><br>
       <button class="close-button" onclick="toggleCompiler()">×</button>

        </div>
        <button type="submit">Compile</button>
        <button class="reset-button" onclick="resetCompiler()">Reset</button>

    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        console.log('DOM fully loaded and parsed');
    });

    function showEnrollForm(courseId) {
        console.log('Showing enroll form');
        window.location.href = `/enroll?course_id=${courseId}`;
    }

    function showModuleInSidebar(courseName, modules, selectedModuleId) {
        console.log('Showing module in sidebar', courseName, modules, selectedModuleId);

        document.getElementById('dashboard').classList.add('hidden');
        const sidebar = document.getElementById('sidebar');
        sidebar.style.display = 'flex';
        document.getElementById('sidebar-course-name').innerText = courseName;
        
        const sidebarModules = document.getElementById('sidebar-modules');
        sidebarModules.innerHTML = '';
        modules.forEach(module => {
            sidebarModules.innerHTML += `
                <div class="module ${module.module_id === selectedModuleId ? 'selected' : ''}" onclick="showModuleDetails(${module.module_id}, '${module.module_name}')">
                    <h4>${module.module_name}</h4>
                    <p>Study Resources</p>
                    <p>Quiz: ${module.quiz_score ? module.quiz_score + '%' : '-'}</p>
                </div>
            `;
        });

        showModuleDetails(selectedModuleId, modules.find(m => m.module_id === selectedModuleId).module_name);
    }

    function showModuleDetails(moduleId, moduleName) {
        console.log('Showing module details', moduleId, moduleName);
        fetch(`/module-details/${moduleId}`)
            .then(response => response.json())
            .then(data => {
                console.log('Fetched module details:', data);

                document.getElementById('details-container').classList.remove('hidden');

                document.getElementById('module-details-title').innerText = moduleName;
                const moduleDetailsContent = document.getElementById('module-details-content');
                moduleDetailsContent.innerHTML = '';

                moduleDetailsContent.innerHTML += `<h3 class="module-details-heading">Materials</h3>`;
                data.materials.forEach(material => {
                    moduleDetailsContent.innerHTML += `
                        <div class="material">
                            <h4>${material.title}</h4>
                            <p>Type: ${material.type}</p>
                            <p>Description: ${material.description}</p>
                            <a href="${material.link}" target="_blank">Link</a>
                        </div>
                    `;
                });

                moduleDetailsContent.innerHTML += `<h3 class="module-details-heading">Quizzes</h3>`;
                if (data.quizzes && data.quizzes.length > 0) {
                    data.quizzes.forEach(quiz => {
                        moduleDetailsContent.innerHTML += `
                            <div class="quiz">
                                <h4>${quiz.quiz_title}</h4>
                                <p>Total Marks: ${quiz.total_marks}</p>
                                <a href="/quiz/start/${quiz.quiz_id}">${quiz.quiz_title}</a>
                            </div>
                        `;
                    });
                } else {
                    moduleDetailsContent.innerHTML += `<p>No quizzes available for this module.</p>`;
                }

                document.getElementById('compiler-container').classList.remove('hidden');
            })
            .catch(error => {
                console.error('Error fetching module details:', error);
            });
    }

   function toggleCompiler() {
    const compilerContainer = document.getElementById('compiler-container');
    if (compilerContainer) {
        // Toggle between hidden and visible classes
        compilerContainer.classList.toggle('hidden');
        compilerContainer.classList.toggle('visible');
    } else {
        console.error('Compiler container not found.');
    }
}

 function resetCompiler() {
            document.getElementById('code').value = '';
            document.getElementById('input').value = '';
            document.getElementById('lang').selectedIndex = 0;
        }
    function showDashboard() {
        document.getElementById('details-container').classList.add('hidden');
        document.getElementById('dashboard').classList.remove('hidden');
        document.getElementById('sidebar').style.display = 'none';
        document.getElementById('compiler-container').classList.add('hidden');
    }
</script>
</body>
</html>
