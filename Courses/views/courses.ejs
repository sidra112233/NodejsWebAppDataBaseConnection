<!-- courses.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Courses</title>
</head>
<body>
    <h1>Courses</h1>
    <ul>
        <% courses.forEach(course => { %>
            <li>
                <h2><%= course.course_name %></h2>
                <p><%= course.description %></p>
                <a href="/courses/<%= course.course_id %>/modules">View Modules</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
